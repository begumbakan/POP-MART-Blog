---
import '../styles/global.css';

import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About Me";

const identity = {
	firstName: "Beg√ºm",
	occupation: "Software Engineering student",
	hobbies: ["singing", "playing ukulele"],
};

const skills = ["HTML", "CSS", "JavaScript", "Astro", "Java"];

const happy = true;
const finished = false;
const goal = 3;


const fontWeight = "bold";
---

<BaseLayout title={pageTitle}>
    <style define:vars={{fontWeight}}>
        .about-section {
            background: #353535;
            border-radius: 1.5rem;
            padding: 2rem 2.5rem;
            margin: 2rem auto;
            max-width: 700px;
            animation: fadeIn 0.8s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(24px);}
            to { opacity: 1; transform: none;}
        }

        .about-section ul {
            padding-left: 1.5rem;
        }

        .about-section li {
            margin-bottom: 0.5em;
            font-size: 1.1em;
        }

        .bold {
            font-weight: var(--fontWeight);
            font-size: 1.3em;
            margin-top: 1.5em;
            margin-bottom: 0.5em;
            color: #fff;
        }

        a {
            color: #d5d5d5;
        }

        a:hover {
            color: #e60122;
        }
    </style>
    <section class="about-section">
        <h1>{pageTitle}</h1>
        <p>This blog was created by following the <a href="https://docs.astro.build/en/tutorial/0-introduction/">Astro blog tutorial</a> </p>
        <p class="bold">Here are a few facts about me:</p>
        <ul>
            <li>My name is {identity.firstName}.</li>
            <li>I'm a {identity.occupation}.</li>
            {identity.hobbies.length >= 2 &&
                <li>My hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
            }
        </ul>
        <p class="bold">My skills are:</p>
        <ul>
            {skills.map((skill) => <li class="skill">{skill}</li>)}
        </ul>
    </section>
    <script>
        import "../scripts/menu.js";
    </script>
</BaseLayout>
